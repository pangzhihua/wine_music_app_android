<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/player_bottom_list_item2_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        fresco:placeholderImage="@drawable/record_image"
        fresco:roundedCornerRadius="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/player_bottom_list_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1296db"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/player_bottom_list_item2_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开"
            android:textColor="#12A2DB"
            android:textSize="12dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:src="@drawable/like_icon_707070_64" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:src="@drawable/download_icon_707070_64" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/delete_icon_707070_64" />

</LinearLayout>