<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:src="@drawable/add_icon_707070_64" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/k_song_list_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        fresco:placeholderImage="@drawable/record_image"
        fresco:roundedCornerRadius="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/k_song_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="该不该"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/k_song_list_item_remark"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/k_song_list_item_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无歌手"
            android:textColor="#999"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/k_song_list_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/k_song_list_item_remark"
            android:src="@drawable/com_icon_cdcdcd_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/k_song_list_item_remark"
            android:layout_toRightOf="@+id/k_song_list_item_comment"
            android:text="1W"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/k_song_list_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/more_icon_cdcdcd_32"
            android:translationY="-10sp" />

        <TextView
            android:id="@+id/k_song_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/k_song_list_item_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="1分钟前"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ededed" />

    </RelativeLayout>

</LinearLayout>